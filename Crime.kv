            text: ""
            height: "10dp"
            size_hint_y: None
        Button:
            #spacing: "5dp"
            height: "10dp"
            size_hint_y: None
            text: "Click here for more"
            on_press: root.button_click()
            #size: "200dp", "200dp"
            #pos_hint: {'center_x': .5}




